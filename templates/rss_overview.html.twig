{% extends 'base.html.twig' %}

{% block body %}

    <div class="row row-cols-1 row-cols-md-4 g-4">

        {% for item in items %}

            <div class="col">
                <div class="card " style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{ item.type }} - {{ item.version }} G{{ item.generation }}
                            <br>{{ item.SAS }}
                        </h5>
                        <p class="card-text">{{ item.title }}</p>


                        <a href="{{ item.link }}" class="btn btn-primary">Forum</a>
                    </div>
                </div>
            </div>
        {% endfor %}


    </div>
{% endblock %}